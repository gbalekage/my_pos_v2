generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  name      String
  email     String    @unique
  password  String
  role      UserRole  @default(ATTENDANT)
  isActive  Boolean   @default(true)
  lastLogin DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  suspended Boolean   @default(false)

  Order         Order[]
  Table         Table[]
  Cancellations Cancellations[]
  Discounts     Discount[]      @relation("UserDiscounts")

  Sales       Sale[]
  SignedBills SignedBills[] @relation("UserSignedBills")
  Expences    Expences[]
}

model Subscription {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  planType       PlanType           @default(MONTHLY)
  duration       Int
  activationCode String?
  startDate      DateTime?
  endDate        DateTime?
  isActive       Boolean            @default(false)
  status         SubscriptionStatus @default(INACTIVE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Restaurant {
  id            String         @id @default(cuid())
  name          String
  address       String?
  subscriptions Subscription[]
  logoUrl       String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  email         String         @unique
  phoneNumber   String?
}

model Printer {
  id        String            @id @default(cuid())
  name      String
  type      PrinterConnection @default(ETHERNET)
  ip        String?
  port      Int               @default(9100)
  isDefault Boolean           @default(false)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  store Store?
}

model Store {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  printerId String  @unique
  printer   Printer @relation(fields: [printerId], references: [id])

  items    Item[]
  Expences Expences[]
}

model Category {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items Item[]
}

model Item {
  id         String   @id @default(cuid())
  name       String
  storeId    String
  store      Store    @relation(fields: [storeId], references: [id])
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  barcode    String   @unique
  stock      Int
  price      Float
  package    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  OrderItem OrderItem[]
  SaleItems SaleItem[] // back-relation for sales
}

model Order {
  id           String  @id @default(cuid())
  orderNumber  String?
  restaurantId String?

  attendantId String
  attendant   User   @relation(fields: [attendantId], references: [id])

  items OrderItem[]

  totalAmount Float
  paidAmount  Float       @default(0)
  status      OrderStatus @default(PENDING)

  paymentMethod PaymentMethod?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  closedAt  DateTime?

  tableId String?
  Table   Table?  @relation("TableOrders", fields: [tableId], references: [id])

  ActiveTable Table?        @relation("TableActiveOrder")
  SignedBills SignedBills[] @relation("OrderSignedBills")
  Discounts   Discount[]    @relation("OrderDiscounts")
}

model OrderItem {
  id       String @id @default(cuid())
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id])
  itemId   String
  item     Item   @relation(fields: [itemId], references: [id])
  quantity Int
  price    Float
  discount Float?
}

model Table {
  id     String      @id @default(cuid())
  number Int         @unique
  status TableStatus @default(AVAILABLE)

  order Order[] @relation("TableOrders")

  currentOrderId String? @unique
  currentOrder   Order?  @relation("TableActiveOrder", fields: [currentOrderId], references: [id])

  attendantId String?
  attendant   User?   @relation(fields: [attendantId], references: [id])

  // Back-relation for sales
  Sales Sale[]
}

model Cancellations {
  id          String   @id @default(cuid())
  name        String
  quantity    Int
  unitPrice   Int
  totalPrice  Int
  cancelledBy String?
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
  cancelledAt DateTime
}

model Discount {
  id String @id @default(cuid())

  discountedById String
  discountedBy   User   @relation("UserDiscounts", fields: [discountedById], references: [id])

  orderId String
  order   Order  @relation("OrderDiscounts", fields: [orderId], references: [id])

  discountPercentage Int
  discountAmount     Float
  newTotalAmount     Float
  createdAt          DateTime @default(now())
}

model Sale {
  id             String        @id @default(cuid())
  tableId        String?
  table          Table?        @relation(fields: [tableId], references: [id])
  attendantId    String
  attendant      User          @relation(fields: [attendantId], references: [id])
  totalAmount    Float
  receivedAmount Float
  change         Float
  paymentMethod  PaymentMethod
  status         OrderStatus   @default(PENDING)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  items SaleItem[]
}

model SaleItem {
  id       String @id @default(cuid())
  saleId   String
  sale     Sale   @relation(fields: [saleId], references: [id])
  itemId   String
  item     Item   @relation(fields: [itemId], references: [id])
  quantity Int
  price    Float
  total    Float
}

model Client {
  id          String        @id @default(cuid())
  name        String
  email       String        @unique
  phone       String        @unique
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  SignedBills SignedBills[] @relation("ClientSignedBills")
}

model SignedBills {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation("OrderSignedBills", fields: [orderId], references: [id])

  attendantId String
  attendant   User   @relation("UserSignedBills", fields: [attendantId], references: [id])

  clientId String
  client   Client @relation("ClientSignedBills", fields: [clientId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expences {
  id        String   @id @default(cuid())
  amount    Float
  date      DateTime @default(now())
  createdBy String
  user      User     @relation(fields: [createdBy], references: [id])
  storeId   String
  store     Store    @relation(fields: [storeId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
  AIRTEL_MONEY
  MPESA
  ORANGE_MONEY
  AFRI_MONEY
}

enum PrinterConnection {
  ETHERNET
  USB
}

enum UserRole {
  ATTENDANT
  CASHIER
  MANAGER
  ADMIN
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
}

enum PlanType {
  MONTHLY
  YEARLY
}

enum SubscriptionStatus {
  INACTIVE
  ACTIVE
  EXPIRED
  CANCELLED
}
